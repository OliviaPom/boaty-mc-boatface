<%= simple_form_for [ @boat ] do |f| %>
  <%= f.input :name%>
  <%= f.input :location %>
  <%= f.input :price, input_html: {placeholder: '£ 0.00'} %>
  <%#=  f.input :price, input_html: {placeholder: '£ 0.00', class:'custom_class'} %>
  <%= f.input :brand %>
  <%= f.input :category %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>

