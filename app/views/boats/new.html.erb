
<div class="container">

<h1 class="my-4">List your Boat </h1>

    <%= simple_form_for [ @boat ] do |f| %>
    <%= f.input :name%>
    <%= f.input :location %>
    <%= f.input :price, input_html: { placeholder: 'Â£ per day..'}%>
    <%= f.input :brand %>
    <%= f.input :category %>
