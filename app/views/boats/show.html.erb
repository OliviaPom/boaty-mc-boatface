<h1>More info on Your Selected Boat </h1>

<div class="container-md">
  <div class="d-flex flex-row bd-highlight mb-3">
     <div class="p-2 bd-highlight">
      <div class="card mb-3">
       <%= image_tag("/images/boat#{rand(1...10)}.jpeg", class: "card-img-top") %>
        <div class="card-body">
          <h2>Name: <%= @boat.name %></h2>
          <h2>Brand: <%= @boat.brand %></h2>
          <h3>Location: <%= @boat.location %></h3>
          <h3>Price by day: Â£<%= @boat.price %></h3>
          <h3>Category: <%= @boat.category %></h3>
       </div>
      </div>
     </div>
   </div>
</div>

<div class>
<%= simple_form_for [ @boat, @booking ] do |f| %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>

<%= link_to 'home', root_path, class: "btn btn-primary"%>


